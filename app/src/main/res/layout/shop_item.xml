<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="7dp"
    android:orientation="horizontal">

    <com.example.mcommerce.utils.CircleImageView
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:src="@drawable/shop"
        android:layout_marginRight="@dimen/dip_20"
        android:tint="@color/colorPrimary"/>

    <TextView
        android:id="@+id/txt_shop_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="JinDong"
        android:textColor="@color/colorPrimary"
        android:textSize="20sp"
        android:layout_gravity="center_vertical"/>

    <RelativeLayout
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1">
        <TextView
            android:layout_alignParentRight="true"
            android:id="@+id/txt_shop_phonenumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="111111"
            android:textSize="13sp"
            android:textColor="@color/colorPrimary"/>

        <TextView
            android:id="@+id/txt_shop_address"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="111111"
            android:textSize="13sp"
            android:layout_below="@id/txt_shop_phonenumber"
            android:layout_alignParentBottom="true"
            android:textColor="@color/colorPrimary"/>

    </RelativeLayout>
</LinearLayout>